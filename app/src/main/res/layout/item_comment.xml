<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemcomment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginHorizontal="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemcomment_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_profile"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/itemcomment_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/itemcomment_user_image"
            android:textStyle="bold"
            tools:text="유저 아이디"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/itemcomment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemcomment_user_id"
            android:layout_marginLeft="10dp"
            tools:text="메세지 입니다"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/itemcomment_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>

</layout>