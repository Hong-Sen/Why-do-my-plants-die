<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/aquaGreen" >

        <ImageView
            android:id="@+id/itemAlarm_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/itemAlarm_image"
            android:layout_toLeftOf="@+id/itemAlarm_btn_onoff"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/itemAlarm_plant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/aquaGreen"
                android:text="식물 이름"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/itemAlarm_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/aquaGreen"
                android:text="마지막 물 준 날짜"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/itemAlarm_cycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/aquaGreen"
                android:text="물주기"
                android:textSize="15sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/itemAlarm_btn_onoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</LinearLayout>