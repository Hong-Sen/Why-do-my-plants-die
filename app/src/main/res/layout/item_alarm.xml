<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:background="@drawable/alarm_curved_background">

        <RelativeLayout
            android:id="@+id/itemAlarm_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/itemAlarm_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_toLeftOf="@+id/itemAlarm_btnOnoff"
                android:layout_toRightOf="@+id/itemAlarm_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemAlarm_plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="식물 이름"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/deepGreen"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/itemAlarm_image_heart"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_after_like">
                </ImageView>

                <TextView
                    android:id="@+id/itemAlarm_heart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/itemAlarm_image_heart"
                    android:textColor="@color/greyDark"
                    android:text="입양 날짜"
                    android:textStyle="italic"
                    android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:id="@+id/itemAlarm_image_cycle"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_water_color">
                    </ImageView>

                    <TextView
                        android:id="@+id/itemAlarm_cycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/itemAlarm_image_cycle"
                        android:textColor="@color/greyDark"
                        android:text="물주기"
                        android:textStyle="italic"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/itemAlarm_btnOnoff"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_switch_off"/>
        </RelativeLayout>
    </LinearLayout>
</layout>