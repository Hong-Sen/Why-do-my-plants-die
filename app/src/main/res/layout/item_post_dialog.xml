<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itempostdialog_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_profile"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/itempostdialog_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itempostdialog_user_image"
            android:text="user id"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/itempostdialog_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_close"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/itempostdialog_plant_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:src="@drawable/icon_tree"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="#"
            android:textColor="@color/deepGreen"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/itempostdialog_plant_kind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="식물 종류"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="#"
            android:textColor="@color/deepGreen"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/itempostdialog_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2021. 08. 05"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/itempostdialog_explain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="설명"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"/>

        </ScrollView>

    </LinearLayout>

</LinearLayout>